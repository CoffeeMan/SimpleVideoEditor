<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/butonCut"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_centerInParent="true"
        android:onClick="buttonCutListener"
        android:text="Cut video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the application for work with files"
        android:textAlignment="center"
        android:textSize="@dimen/_25sdp"
        app:layout_constraintBottom_toTopOf="@+id/butonCut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMerge"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_100sdp"
        android:onClick="buttonMergeListener"
        android:text="Merge Videos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butonCut"
        app:layout_constraintBottom_toTopOf="@+id/buttonAllVideos"
        />

    <Button
        android:id="@+id/buttonAllVideos"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_100sdp"
        android:onClick="buttonAllVideosListener"
        android:text="My works"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMerge" />


</androidx.constraintlayout.widget.ConstraintLayout>